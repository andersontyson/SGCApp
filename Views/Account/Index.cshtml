@model IPagedList<SGCApp.ViewModels.UserViewModel>
@using X.PagedList
@using X.PagedList.Mvc.Core
@{
    ViewData["Title"] = "Lista de Usuarios";
}

<head>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>

<h1>Lista de Usuarios</h1>

<div class="mb-3">
    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary">Crear</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Nombre Completo</th>
            <th>Usuario</th>
            <th>Correo Electrónico</th>
            <th>Teléfono</th>
            <th>Rol</th>
            <th>Departamento</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
      @if (Model != null)
      {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NormalizedUserName</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.Role</td>
                <td>@item.DepartamentName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Editar</a>
                </td>
            </tr>
        }  
      }
    </tbody>
</table>
<div class="text-center">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), PagedListRenderOptions.Classic)
</div>